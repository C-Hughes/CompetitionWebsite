<section class="hero is-info">
  <div class="hero-body has-text-centered">
    <p class="title">My Addresses</p>
  </div>
</section>

{{> userNav}}

<div class="container">
    <section class="section">
    <h2 class="subtitle">
        The following addresses will be used on the checkout page by default.
    </h2>
    </section>

    {{#if errors}}
        <div class="container is-max-desktop mb-4">
            <div class="notification is-danger is-light">
                {{#each error}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    {{/if}}
    {{#if successes}}
        <div class="container is-max-desktop mb-4">
            <div class="notification is-success is-light">
                {{#each success}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    {{/if}}
    
    <div class="columns">
        <div class="column">
            <div class="card">
                <form action="/user/address/billing" method="post">
                    <header class="card-header">
                        <p class="card-header-title">Billing Address</p>
                    </header>
                    <div class="card-content">
                        <div id="billingAddressInfo" class="content">
                            {{#if userBillingAddress}}
                                <p>{{userBillingAddress.firstName}} {{userBillingAddress.lastName}}</p>
                                <p>{{userBillingAddress.streetAddress1}}</p>
                                <p>{{userBillingAddress.phoneNumber}}</p>
                                <p>{{userBillingAddress.townCity}}</p>
                                <p>{{userBillingAddress.countryRegion}}</p>
                            {{else}}
                                <p>You have not set up this type of address yet.</p>
                            {{/if}}
                        </div>
                        <div id="editBillingAddressForm" class="content" style="display: none;">
                            <div class="field">
                                <label class="label">First Name *</label>
                                <div class="control has-icons-left">
                                    <input id="firstName" name="firstName" class="input" type="text" placeholder="First Name" value="{{userBillingAddress.firstName}}" required>
                                    <span class="icon is-small is-left">
                                    <i class="fa-solid fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Last Name *</label>
                                <div class="control has-icons-left">
                                    <input id="lastName" name="lastName" class="input" type="text" placeholder="Last Name" value="{{userBillingAddress.lastName}}" required>
                                    <span class="icon is-small is-left">
                                    <i class="fa-solid fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <label class="label">Country / Region *</label>
                            <div class="field">
                                <p class="control has-icons-left">
                                    <span class="select is-fullwidth">
                                        <select id="countryRegion" name="countryRegion" required>
                                            {{#if userBillingAddress.countryRegion}}
                                                <option selected>{{userBillingAddress.countryRegion}}</option>
                                            {{else}}
                                                <option value="">Country</option>
                                            {{/if}}
                                            {{> countryDropdown}}
                                        </select>
                                    </span>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-globe"></i>
                                    </span>
                                </p>
                            </div>
                            <div class="field">
                                <label class="label">Street Address *</label>
                                <div class="control has-icons-left">
                                    <input id="streetAddress1" name="streetAddress1" class="input" type="text" placeholder="Street Address 1" value="{{userBillingAddress.streetAddress1}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-road"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control has-icons-left">
                                    <input id="streetAddress2" name="streetAddress2" class="input" type="text" placeholder="Street Address 2" value="{{userBillingAddress.streetAddress2}}">
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-road"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Town / City *</label>
                                <div class="control has-icons-left">
                                    <input id="townCity" name="townCity" class="input" type="text" placeholder="Town / City" value="{{userBillingAddress.townCity}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-city"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">County</label>
                                <div class="control has-icons-left">
                                    <input id="county" name="county" class="input" type="text" placeholder="County" value="{{userBillingAddress.county}}">
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-map-location-dot"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Postcode *</label>
                                <div class="control has-icons-left">
                                    <input id="postcode" name="postcode" class="input" type="text" placeholder="Postcode" value="{{userBillingAddress.postcode}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-envelope"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Phone Number *</label>
                                <div class="control has-icons-left">
                                    <input id="phoneNumber" name="phoneNumber" class="input" type="tel" placeholder="Phone Number" value="{{userBillingAddress.phoneNumber}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-phone"></i>
                                    </span>
                                </div>
                            </div>
                            <input type="hidden" name="csrfToken" value="{{csrfToken}}">    
                        </div>
                    </div>
                    <footer id="editBillingAddressFormButton" class="card-footer">
                        <button class="card-footer-item" onclick="editForm('billingAddressInfo', 'editBillingAddressForm', 'editBillingAddressFormButton', 'submit');">
                            <span class="icon">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </span>
                            <span>Edit</span>
                        </button>
                    </footer>
                </form>    
            </div>
        </div>
        
        <div class="column">
            <div class="card">
                <form action="/user/address/shipping" method="post">
                    <header class="card-header">
                        <p class="card-header-title">Shipping Address</p>
                    </header>
                    <div class="card-content">
                        <div id="shippingAddressInfo" class="content">
                            {{#if userShippingAddress}}
                                <p>{{userShippingAddress.firstName}} {{userShippingAddress.lastName}}</p>
                                <p>{{userShippingAddress.streetAddress1}}</p>
                                <p>{{userShippingAddress.phoneNumber}}</p>
                                <p>{{userShippingAddress.townCity}}</p>
                                <p>United Kingdom</p>
                            {{else}}
                                <p>You have not set up this type of address yet.</p>
                            {{/if}}
                        </div>
                        <div id="editShippingAddressForm" class="content" style="display: none;">
                            <div class="field">
                                <label class="label">First Name *</label>
                                <div class="control has-icons-left">
                                    <input id="firstName" name="firstName" class="input" type="text" placeholder="First Name" value="{{userShippingAddress.firstName}}" required>
                                    <span class="icon is-small is-left">
                                    <i class="fa-solid fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Last Name *</label>
                                <div class="control has-icons-left">
                                    <input id="lastName" name="lastName" class="input" type="text" placeholder="Last Name" value="{{userShippingAddress.lastName}}" required>
                                    <span class="icon is-small is-left">
                                    <i class="fa-solid fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Street Address *</label>
                                <div class="control has-icons-left">
                                    <input id="streetAddress1" name="streetAddress1" class="input" type="text" placeholder="Street Address 1" value="{{userShippingAddress.streetAddress1}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-road"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control has-icons-left">
                                    <input id="streetAddress2" name="streetAddress2" class="input" type="text" placeholder="Street Address 2" value="{{userShippingAddress.streetAddress2}}">
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-road"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Town / City *</label>
                                <div class="control has-icons-left">
                                    <input id="townCity" name="townCity" class="input" type="text" placeholder="Town / City" value="{{userShippingAddress.townCity}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-city"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">County</label>
                                <div class="control has-icons-left">
                                    <input id="county" name="county" class="input" type="text" placeholder="County" value="{{userShippingAddress.county}}">
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-map-location-dot"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Postcode *</label>
                                <div class="control has-icons-left">
                                    <input id="postcode" name="postcode" class="input" type="text" placeholder="Postcode" value="{{userShippingAddress.postcode}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fa-solid fa-envelope"></i>
                                    </span>
                                </div>
                            </div>
                            <input type="hidden" name="csrfToken" value="{{csrfToken}}">    
                        </div>
                    </div>
                    <footer id="editShippingAddressFormButton" class="card-footer">
                        <button class="card-footer-item" onclick="editForm('shippingAddressInfo', 'editShippingAddressForm', 'editShippingAddressFormButton', 'submit');">
                            <span class="icon">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </span>
                            <span>Edit</span>
                        </button>
                    </footer>
                </form> 
            </div>
        </div>
    </div>
</div>