<section class="hero is-info">
  <div class="hero-body">
    <p class="title">Rewards</p>
  </div>
</section>

{{> userNav}}


<section class="section">
    <h2 class="title">
        My Rewards
    </h2>
    <h2 class="subtitle">
        Earn rewards the more you play and for referring friends!
    </h2>
</section>



<div class="columns">
    <div class="column">
        <article class="message">
            <div class="message-body">
                <div class="card-content">
                    <div class="media">
                        <div class="media-left is-large">
                            <span class="icon is-large fas fa-2x"><i class="fa-solid fa-coins"></i></span>
                        </div>
                        <div class="media-content py-1">
                            <p class="title is-3">Points: 46</p>
                            <p class="subtitle is-6">Equals 0.5 GBP</p>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>

    <div class="column">
        <article class="message">
            <div class="message-body">
                <div class="card-content">
                    <div class="media">
                        <div class="media-left">
                            <span class="icon is-large fas fa-2x"><i class="fa-solid fa-medal"></i></span>
                        </div>
                        <div class="media-content py-1">
                            <p class="title is-3">Bronze (Level 2)</p>
                            <p class="subtitle is-6">655 Points to Silver</p>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>

<div class="columns">
    <div class="column">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">Earn</p>
                <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
                </button>
            </header>
            <div class="card-content">
                <div class="content">
                    <p class="title is-6">Cashback</p>
                    <p class="subtitle is-6">Earn 3 Points for every 1 GBP spent.</p>
                    <hr />
                    <p class="title is-6">Challenge Board</p>
                    <p class="subtitle is-6">Collect badges and get rewarded</p>
                </div>
            </div>
        </div>
    </div>

    <div class="column">
         <div class="card">
            <header class="card-header">
                <p class="card-header-title">Redeem</p>
                <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
                </button>
            </header>
            <div class="tabs is-centered is-boxed">
                <ul>
                    <li class="is-active">
                    <a>
                        <span>Redeem</span>
                    </a>
                    </li>
                    <li>
                    <a>
                        <span>Coupons</span>
                    </a>
                    </li>
                </ul>
                </div>
            <div class="card-content">
                <div class="content">
                    <p class="title is-6">Create Discount Coupon</p>
                    <hr />
                    <div class="media">
                        <div class="media-left">
                            <span class="icon is-large fas fa-2x"><i class="fa-solid fa-sack-dollar"></i></span>
                        </div>
                        <div class="media-content py-1">
                            <p class="title is-6">Your point balance is 46</p>
                            <p class="subtitle is-6">The minimum amount to be redeemed is 100 Points.</p>
                        </div>
                    </div>
                    <div class="field has-addons">
                        <div class="control">
                            <input class="input" type="text" placeholder="Amount to Redeem" value="46">
                        </div>
                        <div class="control">
                            <button class="button is-primary">
                            Redeem
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<hr></hr>

<section class="section">
    <h2 class="title">
        Referrals
    </h2>
    <h2 class="subtitle">
        Thank you for spreading the word! Every time you refer someone, you earn points towards rewards.
    </h2>
</section>

<div class="mx-3">
    <div class="container">
        <p class="subtitle"> People you've signed up: 1</p> 

        <p>Your Referral Code:</p>
        <div class="box has-background-success has-text-black-bis">[REFERRAL CODE]</div>

        <div class="field has-addons">
            <p class="control">
                <button class="button">
                <span class="icon is-small">
                    <i class="fa-solid fa-copy"></i>
                </span>
                <span>Copy</span>
                </button>
            </p>
            <p class="control">
                <button class="button is-facebook">
                <span class="icon is-small">
                    <i class="fa-brands fa-square-facebook"></i>
                </span>
                <span>Facebook</span>
                </button>
            </p>
            <p class="control">
                <button class="button is-info">
                <span class="icon is-small">
                    <i class="fa-brands fa-square-twitter"></i>
                </span>
                <span>Twitter</span>
                </button>
            </p>
            <p class="control">
                <button class="button is-success">
                <span class="icon">
                    <i class="fa-brands fa-square-whatsapp"></i>
                </span>
                <span>WhatsApp</span>
                </button>
            </p>
            <p class="control">
                <button class="button">
                <span class="icon is-small">
                    <i class="fa-solid fa-square-envelope"></i>
                </span>
                <span>Email</span>
                </button>
            </p>
        </div>
    </div>
</div>

