                                    </div>
                                {{/each}}
                            {{else}}
                                <div class="column is-full">
                                    <div class="notification">
                                        <p>No Sitewide Coupons show.</p>
                                    </div>
                                </div>
                            {{/if}}
                        </div>
                    </li>
                    <!-- Invisible Draw Result Cards -->
